                    &>a {
                        font-size: .14rem;
                        font-family: cursive;
                    }
                }

                &>input[type='button'] {
                    line-height: .26rem;
                    width: 100%;
                    margin-top: .1rem;
                    color: white;
                    font-size: .12rem;
                    cursor: pointer;
                    border: none;
                    outline: none;
                    background-color: #816e9e;

                    &:hover {
                        background-color: #705697;
                    }
                }
            }
        }
    }
